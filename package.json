{
  "name": "new-hrf-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "test": "jest --config jest.config.js",
    "start": "node dist/index.js",
    "dev": "npx nodemon --watch src -e ts --exec \"npm run build && node dist/index.js\"",
    "build": "tsc && tsc-alias",
    "migrate:dev": "knex migrate:latest --env development --knexfile=database/knexfile.ts",
    "migrate:prod": "knex migrate:latest --env production --knexfile=database/knexfile.ts",
    "make": "knex migrate:make transactionTable -x ts --knexfile=database/knexfile.ts",
    "make:seed": "knex seed:make roles_and_permissions -x ts --knexfile=database/knexfile.ts",
    "seed:run": " knex seed:run  ts --knexfile=database/knexfile.ts"
  },
  "keywords": [],
