    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-brute": "^1.0.1",
    "express-rate-limit": "^7.5.0",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
