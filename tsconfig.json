{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM"],

    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "noUnusedLocals": true,

    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "database"],
  "exclude": ["database/**/*"]
}
